SCREENSHOT_PORT=3003
SCREENSHOT_BASE_URL=http://localhost:7893

# Database (local)
DB_HOST=aquatiq-postgres-local
DB_PORT=5432
DB_NAME=aquatiq_dev
DB_USER=aquatiq
DB_PASSWORD=postgres
DB_SSL_MODE=disable
DB_MAX_CONNECTIONS=25
DB_MAX_IDLE_CONNECTIONS=5
DB_CONNECTION_MAX_LIFETIME=5m

# Redis (local)
REDIS_ADDR=aquatiq-redis-local:6379
REDIS_PASSWORD=redis
REDIS_DB=0
REDIS_POOL_SIZE=10
REDIS_STREAM_MAX_LEN=10000

# NATS (local)
NATS_URL=${NATS_URL:-nats://nats:4222}
NATS_TOKEN=${NATS_AUTH_TOKEN:-nats}

# By default, scheduled captures are disabled so screenshots are only taken when triggered.
# Set to 'true' to enable scheduled captures (cron expression controlled by SCREENSHOT_CRON).
SCREENSHOT_SCHEDULE_ENABLED=false
SCREENSHOT_CRON=* * * * *

# Cleanup schedule (removes old screenshots). Set to 'false' to disable cleanup.
SCREENSHOT_CLEANUP_ENABLED=true
SCREENSHOT_CLEANUP_CRON=*/5 * * * *
